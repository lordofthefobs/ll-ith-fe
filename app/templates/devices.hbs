<table class="table table-hover">
	<thead>
		<tr>
			<td>Name</td>
			<td>Mac</td>
			<td>Status</td>
			<td>Last Duration</td>
			<td>Update</td>
		</tr>
	</thead>
	<tbody>
		{{#each device in model}}
			<tr>
				<td>{{input type="text" value=device.name}}</td>
				<td>{{device.mac}}</td>
				<td>{{device.status}}</td>
				<td></td>
				<td>
					<button {{action "update" device}} class="btn btn-default">Update</button>	
				</td>
			</tr>
		{{/each}}
	</tbody>
</table>